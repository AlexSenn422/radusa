<section id="section-instagram">
  <div class="container-fluid">
    <div class="row">
      <div class="owl-carousel owl-theme" id="instagram-carousel">
        {% for block in section.blocks %}
        <div class="item"><a target="_blank" href="{% if block.settings.link != blank %}{{block.settings.link}}{%else%}#{%endif%}"><img src="{{block.settings.image | img_url: '300x'}}" class="img-responsive" alt="{{block.settings.image.alt}}"></a></div>
        {% endfor %}

      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Instagram",
    "settings": [],
	"blocks": [
     {
       "type": "logo_image",
       "name": "Logo",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "url",
           "id": "link",
           "label": "Link",
           "info": "Optional"
         }
        ]
      }
   ]
  }
{% endschema %}

